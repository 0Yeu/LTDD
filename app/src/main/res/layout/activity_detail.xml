<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ImageView
            android:id="@+id/img_hinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hotel1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="458dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="20sp"
                android:text="Khách sạn Mường Thanh"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/tv_sao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Sao"
                android:fontFamily="sans-serif"
                android:layout_marginStart="10dp"
                android:textSize="16sp"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Muong Thanh Hotel Da Nang là một khách sạn hoàn toàn không hút thuốc nằm cách Sân bay Quốc tế Đà Nẵng 5 phút lái xe và cách Bãi biển Mỹ Khê 1,5 km."
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"

            />


    </RelativeLayout>
</LinearLayout>